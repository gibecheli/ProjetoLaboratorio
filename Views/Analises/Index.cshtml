@model IEnumerable<ProjetoLaboratorio.Models.AnaliseModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div class="col-auto">
            <h2>Análises</h2>
        </div>
        <div class="col-auto">
            <a class="btn btn-success" asp-action="Create">Cadastrar Nova Análise</a>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <a class="btn btn-info"  asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-warning btn-sm"  asp-action="Details" asp-route-id="@item.Id">Detalhar</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
