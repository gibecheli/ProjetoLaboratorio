@model IEnumerable<ProjetoLaboratorio.Models.ClienteModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div class="col-auto">
            <h2>Clientes</h2>
        </div>
        <div class="col-auto">
            <a class="btn btn-success" asp-action="Create">Cadastrar Novo Cliente</a>
        </div>
    </div>
</div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CpfCnpjC)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
               @* <th>@Html.DisplayNameFor(model => model.Telefone)</th>*@
                <th>@Html.DisplayNameFor(model => model.Celular)</th>
                @*<th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.InscEstRG)</th>
                <th>@Html.DisplayNameFor(model => model.NomePropriedade)</th>*@
                <th>@Html.DisplayNameFor(model => model.Convenio)</th>
                @*<th>@Html.DisplayNameFor(model => model.DataCadastro)</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(modelItem => item.TipoPessoa)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.CpfCnpjC)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.Telefone)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.InscEstRG)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomePropriedade)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Convenio.Nome)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>*@
                    <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CpfCnpjC">Editar</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CpfCnpjC">Detalhes</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CpfCnpjC">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>